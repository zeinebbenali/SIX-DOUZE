{% extends "SitePortailBundle:Message:gestion_message.html.twig" %}
{% block contenu %}
<center>
<br><center><font color="#ff0000"><b><h2><b>{{m}}</h2></b></font></center><br>

<table class="gestion">
<tr>
<th>nom </th>
<th>email</th>
<th>telephone</th>
<th>contenu</th>
<th>date d'envoie</th>
<th></th>
<th></th>
<th></th>
</tr>
{% for msg in list %}
<tr>
<td>{{ msg.nom }}</td>

<td>{{ msg.email}}</td>
<td>{{ msg.tel}}</td>
<td>{{ msg.contenu}}</td>
<td>{{ msg.date}}</td>
<td><a href="{{ path('SitePortailBundle_gerer_message_affiche', { 'id': msg.id_msg }) }}">Affiche</a></td>

<td>{% if(msg.valide=="n") %}<a href="{{ path('SitePortailBundle_valid_message', { 'id': msg.id }) }}">Valider</a>{% else %}{{msg.id_admin}}{% endif %}</td>

<td><a href="{{ path('SitePortailBundle_gerer_message_delete', { 'id': msg.id_msg }) }}">Supprimer</a></td>

</tr>
{% else %}
<tr>
<td colspan=7>Aucun message n'a &eacute;t&eacute; trouv&eacute;.</td>
</tr>
{% endfor %}
</table>
</center>
{%endblock%} 