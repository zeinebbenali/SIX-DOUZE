{% extends "SitePortailBundle:Annonce:gestionAnnonce.html.twig" %}
{% block contenu %}
<center>

<br><center><font color="#ff0000"><b><h2><b>La Liste des Annonces Emploi</h2></b></font></center><br>
<br>
<table class="gestion">
<tr>
<th>nature</th>
<th>date</th>

<th>letter</th>
<th>secteur</th>

<th>Afficher</th>
<th>Valider</th>
<th>Supprimer</th>
</tr>
{% for anc in pagerfanta.currentPageResults %}
<tr >
<td>{{ anc.nature }}</td>
<td>{{ anc.date}}</td>
<td>{{ anc.letter|slice(0,50)}}</td>
<td>{{ anc.secteur}}</td>
<td><a href="{{ path('SitePortailBundle_affiche_annonce', { 'id': anc.id ,'categorie':'emploi'}) }}">Affiche</a></td>
<td>{% if(anc.valide=="n") %}<a href="{{ path('SitePortailBundle_valide_annonce', { 'id': anc.id ,'categorie':'emploi'}) }}">Valider</a>{% endif %}</td>


<td><a href="{{ path('SitePortailBundle_supprime_annonce', { 'id': anc.id,'categorie':'emploi'}) }}">Supprimer</a></td>

</tr>
{% else %}
<tr>
<td>Aucun message n'a été trouvé.</td>
</tr>
{% endfor %}
{{ pagerfanta(pagerfanta,'default_translated',{'routeName': 'SitePortailBundle_liste_annonce'}) }}
</table>
</center>
{%endblock%} 